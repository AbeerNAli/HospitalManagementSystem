<div class="limiter">
    <div class="container-login100" style="background-image: url('/images/bg-01.jpg');">
        <div class="wrap-login100">
            @*<form class="login100-form validate-form">*@
            <div style="display: @ViewBag.LogWrong ">
                <button class="btn btn-danger">The user name or password is incorrect</button>
            </div><br />
            @using (Html.BeginForm("POST"))
            {
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Log in
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(y => y.Email, new { @class = "input100", type = "text", name = "username", placeholder = "Username" })
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    @Html.ValidationMessageFor(x => x.Email)

                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    @Html.TextBoxFor(y => y.Password, new { @class = "input100", type = "password", name = "pass", placeholder = "Password" })
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    @Html.ValidationMessageFor(x => x.Password)

                </div>



                <div class="container-login100-form-btn">

                    <button class="login100-form-btn" type="submit" id="Save">
                        Login
                    </button>
                </div>

            }
        </div>
    </div>
</div>


